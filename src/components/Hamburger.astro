---
import lunchBox from "../images/lunchBox.png";
import lunchBoxWebp from "../images/lunchBox.webp";
---

<div class="hamburger">
  <span>
<picture>
	<source srcset={lunchBoxWebp} type="image/webp"/>
	<img src={lunchBox} alt="弁当箱アイコン" />
</picture>
  </span>
  <span></span>
  <span></span>
</div>

<style>
  .hamburger {
    width: 36px;
    height: 36px;
    display: none;
		position: relative;
		z-index: 2;
  }
  @media screen and (max-width: 768px) {
    .hamburger {
      display: block;
      position: relative;
    }
  }

  span {
    display: block;
    transition: all 0.3s;
  }

  span:first-of-type {
    width: 32px;
    margin-left: auto;
    margin-right: auto;
  }

  span:nth-of-type(2) {
    width: 100%;
    position: absolute;
    bottom: 8px;
    left: 0;
    height: 2px;
		background-color: #898989;
  }
  span:last-of-type {
    width: 100%;
    position: absolute;
    bottom: 4px;
    left: 0;
    height: 2px;
    background-color: #898989;
  }

  /* ハンバーガーメニューオープン時のスタイル */

  .hamburger.open span {
  }

  .hamburger.open span:first-of-type {
    opacity: 0;
  }
  .hamburger.open span:nth-of-type(2) {
    bottom: 18px;
    transform: rotate(405deg);
  }
  .hamburger.open span:last-of-type {
    bottom: 18px;
    transform: rotate(-45deg);
  }
</style>
