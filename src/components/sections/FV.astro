---
import FvHeading from "../parts/FvHeading.astro";
import FvImage from "../../images/fv/fv01x2-800.png";
import FvImageWebp from "../../images/fv/fv01x2.webp";
import FvImage02 from "../../images/fv/fv2x2-700.png";
import FvImage02Webp from "../../images/fv/fv2x2.webp";
import FvImage03 from "../../images/fv/fv3.png";
import FvImage03Webp from "../../images/fv/fv3.webp";
---
<section class="fv">
  <div class="fv-inner">
    <div class="fv-text-block js-text-slider">
      <FvHeading />
    </div>
    <div class="swiper image-block js-image-slider">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <figure>
						<picture>
							<source srcset={FvImageWebp} type="image/webp">
							<img src={FvImage} alt="logo">
						</picture>
          </figure>
        </div>
        <div class="swiper-slide">
					<figure>
						<picture>
							<source srcset={FvImage02Webp} type="image/webp">
							<img src={FvImage02} alt="logo">
						</picture>
          </figure>
        </div>
        <div class="swiper-slide">
					<figure>
						<picture>
							<source srcset={FvImage03Webp} type="image/webp">
							<img src={FvImage03} alt="logo">
						</picture>
          </figure>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .fv {
    background-color: var(--base-color);
    margin-right: calc(50% - 50vw);
    margin-left: calc(50% - 50vw);
    padding-right: calc(50vw - 50%);
    padding-left: calc(50vw - 50%);
  }
  .fv-inner {
    display: flex;
    justify-content: space-between;
  }
	.fv-text-block{
		width: 50%;
		overflow-x: hidden;
	}
  .image-block {
    width: 60%;
  }
	figure{
		background-color: var(--base-color);
	}
  img {
    width: 100%;
  }

	@media screen and (max-width: 768px) {
		.fv{
			padding-top: 12px;
		}
		.fv-inner{
			flex-direction: column-reverse;
		}
		.fv-text-block,.image-block{
			width: 100%;
		}
		.fv-text-block{
			padding-top: 48px;
		}
								}
</style>
