---
import Background from "../parts/Background.astro";
import Outview from "../../images/outview.jpg"
import OutviewWebp from "../../images/outview.webp"
const headingText = 'お店へのアクセス'

---
<Background
name="access"
bgType="solidWhite"
headingText = {headingText}
>

<div class="access__inner">
	<figure>
		<picture>
			<source srcset={OutviewWebp} type="image/webp">
		<img src={Outview} alt="お店の外観">
		</picture>
		<figcaption>
			那覇空港から車で約５分
		</figcaption>
	</figure>
	<div class="map">
		<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3580.1149844365814!2d127.6609594150298!3d26.192937583442802!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x34e569b4d199467d%3A0xb1e0e2f553e9781d!2z44G_44Gj44Gh44KD44KT5byB5b2T!5e0!3m2!1sja!2sjp!4v1678883537831!5m2!1sja!2sjp" title="みっちゃん弁当地図" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
	</div>

</div>


</Background>


<style>
	.access__inner{
		display: flex;
		gap: 5%;
	}
	figure{
		width: 40%;
	}
	figcaption{
		font-size: 2rem;
	}
	.map{
		flex: 1;
		width: 60%;
	}
	iframe{
		width: 100%;
		height: 100%;
	}

	@media screen and (max-width: 768px) {
		.access__inner{
			flex-direction: column;
			align-items: center;
		}
		figure{
			width: 100%;
		}
		.map{
			margin-top: 20px;
			width:100%;
		}
		iframe{
			height: 400px;
		}
}
</style>
