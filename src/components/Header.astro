---
import HeaderLogo from "./HeaderLogo.astro";
import ButtonWrapper from "./ButtonWrapper.astro";
import GrobalNav from "./GrobalNav.astro";
import Hamburger from "./Hamburger.astro";
---

<header>
  <div class="header__inner">
    <div class="logoWrapper">
      <HeaderLogo />
    </div>
    <div class="header-right">
      <ButtonWrapper className="buttonContainerHeader" />
      <GrobalNav className="header" />
    </div>
    <Hamburger />
  </div>
</header>

<style>
  header {
    background-color: var(--base-color);
    z-index: 2;
    position: relative;
    overflow-y: visible;
    padding-bottom: 20px;
  }

  @media screen and (max-width: 768px) {
		header{
			padding-bottom: 8px;
		}
  }

  .header__inner {
    width: 95%;
    margin-right: auto;
    margin-left: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logoWrapper {
    width: 30%;
  }
  .header-right {
    width: 60%;
  }

  @media screen and (max-width: 768px) {
    .logoWrapper {
      width: 45%;
      z-index: 5;
    }
    .header-right {
      display: none;
      position: absolute;
      right: 0;
      top: 0;
      width: 100%;
      z-index: 1;
    }
    .header-right.open {
      display: flex;
      flex-direction: column-reverse;
      background-color: var(--base-color);
    }
  }
</style>
