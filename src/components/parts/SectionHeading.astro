---
const {text} = Astro.props;
let cn
if(!text){
	 cn = "section-heading noDisplay"
}

---

<div class={cn}>
	<h2>
		<span>
			{text}
		</span>
	</h2>
</div>


<style>
.section-heading{
	margin-top: 100px;
	margin-bottom: 100px;
}
.noDisplay{
	display: none;
}
h2{
	width: fit-content;
	margin-right: auto;
	margin-left: auto;
	position: relative;
}
span{
	font-size: 4.2rem;
	font-family: var(--font-design-main);
	position: relative;
	z-index: 2
}
h2::before{
	content: '';
	position: absolute;
	transform: translate(-50%,-10%);
	display: block;
	background-image: url(../../images/heading-mark--pink.png);
	background-size: contain;
	width: 80px;
	height: 60px;
	z-index: 1;
}
@media screen and (max-width: 768px) {
	.section-heading{
		margin-top: 0px;
		margin-bottom: 48px;
	}
	h2::before{
		transform: translate(-30%,-10%);
	}
}
</style>
