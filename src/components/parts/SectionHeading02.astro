---
const {headingText} = Astro.props

---

<div class="section-heading">
	<h3>
		<span>
			{headingText}
		</span>
	</h3>
</div>


<style>
	.section-heading{
		margin-top: 60px;
		margin-bottom: 60px;
	}
h3{
	width: fit-content;
	margin-right: auto;
	position: relative;
}
span{
	position: relative;
	z-index: 2;
	font-size: 3.2rem;
	font-family: var(--font-design-main);
}
h3::before{
		content: '';
		position: absolute;
		transform: translate(-50%,-20%);
		display: block;
		background-image: url(../../images/heading-mark.png);
		background-size: contain;
		width: 80px;
		height: 60px;
		z-index: 1;
	}

	@media screen and (max-width: 768px) {
		.section-heading{
			padding-left: 38px;
		}
								}
</style>
