<style>
  .text-layout {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
		background-color: var(--base-color);
  }
  h1 {
    position: relative;
		transform: translateX(32px);
		padding-right: 32px;
  }
  h1 span {
		font-family: var(--font-design-main);
    font-size: 4rem;
  }
  h1::before {
		content: "";
    position: absolute;
    transform: translate(-30%, -30%);
    display: block;
    background-image: url(../../images/heading-mark.png);
    background-size: contain;
    width: 120px;
    height: 90px;
  }
  span {
		display: block;
    position: relative;
    z-index: 1;
  }
  p {
		margin-top: 40px;
		transform: translateX(32px);
    font-size: 2rem;
    line-height: 2;
		padding-right: 32px;;
  }
