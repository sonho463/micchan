<ul class="menu-usual">
	{
		menuUsual.map((item)=>(
			<li>
				<figure>
					<img src={`assets/menuUsual/${item.path}.jpg`} loading="lazy"/>
				<figcaption>{item.name}</figcaption>
			</figure>
		</li>
		))
	}
</ul>

<style>
	img{
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
ul{
	display: flex;
	flex-wrap: wrap;
	row-gap: 32px;
	column-gap: 2%;;
	margin-right: auto;
	margin-left: auto;
}
li{

	width: 18%;
}
figcaption{
	width: 80%;
	font-size: 14px;
	margin-right: auto;
	margin-left: auto;
}

@media screen and (max-width: 768px) {
	ul{
		justify-content: center;
	}
	li{
		width: 45%;
	}
}

</style>
